    <input type="submit" name="draw-mul" value="Visa blandad Kortlek"
        onClick="this.form.action='{{ path('proj-show-deck-shuffled') }}';"
    >
    <h2>Visa spelarens nuvarande regel</h2>
    <input type="submit" name="Regler" value="Visa Regler"
        onClick="this.form.action='{{ path('proj-show-rule') }}';"
