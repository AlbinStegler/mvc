{% block main %}
    <h1>Json</h1>
    <form method="post" action="">
    <p>
        <h2>Visa spelarens hand</h2>
        <input type="submit" name="playerhand" value="Spelares hand"
            onClick="this.form.action='{{ path('proj-show-playerhand') }}';"
        >
    </p>
    <p>
        <h2>Visa datorns hand</h2>
        <input type="submit" name="pchand" value="Visa Pc hand"
